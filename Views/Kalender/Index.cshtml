@{
    ViewData["Title"] = "Kalender";
}
@model KalenderObject

<p>Hieronder vindt u een kalender, handig voor iedere Krisnaldo-fan.</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped" id="kalendertable_future_events">
        <thead>
            <tr>
                <th data-priority="8">MatchCode</th>
                <th data-priority="2">Datum</th>
                <th data-priority="4">Uur</th>
                <th data-priority="6">Locatie</th>
                <th data-priority="7">Adres</th>
                <th data-priority="5">Type</th>
                <th data-priority="3">Kant</th>
                <th data-priority="1">Tegenstander</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lovEvent in Model.Future_Events)
        {
            <tr>
                <td>@lovEvent.MatchCode</td>
                <td>@lovEvent.DagDisplay</td>
                <td>@lovEvent.UurDisplay</td>
                <td>@lovEvent.LocatieDisplay</td>
                <td>@lovEvent.AdresDisplay</td>
                <td>@lovEvent.MatchType.ToString()</td>
                <td>@lovEvent.MatchSide.ToString()</td>
                <td>@lovEvent.Tegenstander</td>
            </tr>
        }
        </tbody>
    </table>
</div>
<br />
<p>De voorbije wedstrijden vindt u hier:</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered" id="kalendertable_past_events">
        <thead>
            <tr>
                <th data-priority="4">Datum</th>
                <th data-priority="5">Type</th>
                <th data-priority="1">Match</th>
                <th data-priority="2">Uitslag</th>
                <th data-priority="3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lovEvent in Model.Past_Events)
        {
            <tr>
                <td>@lovEvent.DagDisplay_Short</td>
                <td>@lovEvent.MatchType.ToString()</td>
                <td>@lovEvent.MatchDisplay</td>
                <td>@lovEvent.ScoreDisplay</td>
                <td><div class="@lovEvent.ClassColor"></div></td>
            </tr>
        }
        </tbody>
    </table>
</div>